.topic-article-wrapper
  width 100%
  overflow auto


  @import './header/styles'
  @import './content/styles'
  @import './footer/styles'
  @import './decision-maker/styles'
  @import './participants/styles'

.topic-overlay
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  z-index 1
  background rgba(0,0,0,0.5)

  @media screen and (min-width 701px)
    display none

.topic-article-content
  max-width 600px
  margin 0 auto
  padding-left 15px
  padding-right 15px

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none
